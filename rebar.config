              , deprecated_function_calls]}.

{deps, [ {brunhilde, "",
               {git, "https://github.com/ksallberg/brunhilde.git",
                 {ref, "2e0d54fff60a8212581447fb23cf9bee60870018"}}}
       , {uuid, "",
               {git, "https://github.com/okeuday/uuid.git",
                 {tag, "v1.5.3"}}}
       , {exemplar, "",
               {git, "https://github.com/lfex/exemplar.git",
                 {tag, "0.4.2"}}}
       ]}.

{post_hooks, [ {compile,
                "lfec -o $REBAR_DEPS_DIR/purestyle/ebin src/homepage.lfe"}
             ]}.
