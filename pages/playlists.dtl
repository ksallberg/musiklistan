<html>

  <head>
    <link href="hacker.css" rel="stylesheet">
    <link href="hack.css" rel="stylesheet">

    <style>
      table {
        table-layout: auto;
        width: 100%;
      }
      table.test td {
        margin: 0px 20px 0px 0px;
        padding: 0px 20px 0px 0px;
      }
      table td.absorbing-column {
        width: 90%;
      }
    </style>

  </head>

  <body>

    <img src="piano_cat.jpg" width="40%" height="40%"/>
    <br/>
    {{username}}, you are logged in.
    <h1>Lists:</h1>
    <table class="test">
      {% for id,name in content %}
      <tr onmouseover="this.style.background='black';"
          onmouseout="this.style.background='';">
        <td><a href="playlist?list={{id}}">{{name}}</a></td>
        <td><a href="share_playlist?list={{id}}">Share playlist</a></td>
        <td class="absorbing-column">
          <a href="leave?list={{id}}">Leave playlist</a>
        </td>
      </tr>
      {% endfor %}
    </table>

    <form method="post" action="playlists_post">
      <h1>Create a playlist</h1>
      Playlist name:
      <br/>
      <input name="playlist_name" type="text"/>
      <br/>
      <input type="submit"/>
    </form>
  </body>

  <a href="logout">Log out...</a>

</html>
