<html>
    <head>
        <link href="hacker.css" rel="stylesheet">
    </head>
    <body>
        <img src="fluffy_cat.jpg"/>
        <h1>Musiklistan!</h1>

         <form method="post" action="login_post.yaws">
            Avandarnamn:
            <br/>
            <input name="username" type="text"/>
            <br/>
            Losenord:
            <br/>
            <input name="password" type="password"/>
            <br/>
            <input type="submit"/>
        </form>
        <br/>
        <a href="register.yaws">Registrera</a>

        <erl>

            %-record(usercookie, {username, times=0}).
            -include("common.hrl").

            out(A) ->
                H = A#arg.headers,
                C = H#headers.cookie,
                case yaws_api:find_cookie_val("usersession", C) of
                    [] -> {html, "<--"};
                    Cookie ->
                        case yaws_api:cookieval_to_opaque(Cookie) of
                            {ok, OP} ->
                                {redirect, "playlists.yaws"};
                            {error, no_session} ->
                                {html, "Not logged in..."}
                        end
                end.

        </erl>

        <br/>
    </body>
</html>
